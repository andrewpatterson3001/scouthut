<% if @signup_fail %>
  <h2> Bad email or password. Try again!</h2>
<% end %>

<div class="container">
  <h3>Sign Up</h3>
  <form id="signup-form" method="post" action="/users">
    <label class="label" for "name">Name</label>
    <input type="text" name="name" placeholder="your first and last name">
    <br>
    <label class="label" for "email">Email</label>
    <input type="text" name="email" placeholder="your email">
    <br>
    <label class="label" for "password">Password</label>
    <input type="text" name="password" placeholder="your desired password">
    <br>
    <div class="submit"><input type="submit" value="Sign Up!!!"></div>
</div>
